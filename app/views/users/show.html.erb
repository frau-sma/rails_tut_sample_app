<table id="profile" summary="Profile Information for User <%= @user.name %>">
<tr>
  <td id="main">
    <h1>
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h1>
    <%= render @microposts %>
    <%= will_paginate @microposts %>
  </td>
  <td id="sidebar">
  <p class="round">
    <b>Name:</b> <%= @user.name %><br/>
    <b>URL:</b>  <%= link_to user_path(@user), @user %><br/>
    <b>Microposts:</b> <%= link_to @user.microposts.count, user_microposts_path(@user) %>
  </p>
  </td>
</tr>
</table>
