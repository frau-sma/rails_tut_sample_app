<% if signed_in? %>
  <table id="front" summary="Front Page for Signed-In Users">
  <tr>
    <td id="main">
      <h1>What's new?</h1>
      <%= render 'shared/micropost_form' %>
      <%= render 'shared/feed' %>
    </td>
    <td id="sidebar">
      <p class="round">
        <%= render 'shared/user_info' %>
      </p>
    </td>
  </tr>
  </table>
<% else %>
  <h1>Sample App</h1>
  <p>This is the home page for the
  <a href="http://railstutorial.org/">Rails Tutorial</a> sample application.</p>
  <%= link_to 'Sign up now!', signup_path, :class => 'signup_button round' %>
<% end %>
